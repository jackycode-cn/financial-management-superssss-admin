{
  "npm.packageManager": "pnpm",
  "typescript.tsdk": "./node_modules/typescript/lib",

  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "quickfix.biome": "explicit",
    "source.organizeImports.biome": "explicit"
  },

  "tailwindCSS.classFunctions": [ "cn", "clsx", "cva", "twMerge", ],
  "tailwindCSS.emmetCompletions": true,
  "i18n-ally.localesPaths": [ "src/locales/lang" ],
  "i18n-ally.namespace": false,
  "i18n-ally.enabledParsers": [ "json" ],
  "i18n-ally.pathMatcher": "{locale}/{namespaces}.{ext}",
  "i18n-ally.enabledFrameworks": [ "i18next","react" ],
  "i18n-ally.keystyle": "flat",
  "i18n-ally.sourceLanguage": "en_US",
  "i18n-ally.defaultNamespace": "",
  "i18n-ally.displayLanguage": "zh_CN",
  "i18n-ally.localeCountryMap": {
    "en":"en_US",
    "zh_CN":"zh_CN",
    "zh_HK":"zh_HK"
  },
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "svg.preview.background": "dark-transparent",
  "i18n-ally.annotationDelimiter": "",
  "i18n-ally.extract.keyMaxLength": 20,
  "react-i18n.i18nPaths": "src\\locales\\lang"
}